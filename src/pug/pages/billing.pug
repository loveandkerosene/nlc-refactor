extends ./../layouts/default-layout.pug
block content

	.contents.overflow-hidden

		//- CARD
		
		.row
			.col-12
				.card
					.page-header
						nav(aria-label='breadcrumb')
							ol.breadcrumbs
								li.breadcrumbs-item.active(aria-current='page')
									i.fa-regular.fa-house-chimney-blank
								li.breadcrumbs-item.div-slash
									i.fa-regular.fa-slash-forward
								li.breadcrumbs-item
									a(href="#") User Name
								li.breadcrumbs-item.div-slash
									i.fa-regular.fa-slash-forward
								li.breadcrumbs-item.div-slash
									| Billing
						.header-content
							.page-title 
								i.fa-light.fa-credit-card
								| Billing
							.actions
								.btn.btn-secondary-gray(data-bs-title="Update payment information" type='button' data-bs-toggle='modal' data-bs-target='#updatePayment')
									i.fa-regular.fa-credit-card.me-2
									| Update Payment

					.card-body
						.contents(style="height: auto")
							
							.row
								.col-4
									h6 Current Plan
									span Maecenas ultrices eu sapien at sollicitudin. In ac lacus sed nisi congue tristique.
								.col-7.offset-1
									.container
										.banner.banner-primary
											.content
												.text
													h6
														small
															| Your current plan is
													h6
														| Business - 4x Graphic - $1.596 billed monthly
													span
														| Your next billing date is 
														b Nov. 27th
											.content
												button.btn.btn-primary.lead-icon
													i.fa-regular.fa-newspaper
													| Change Plan
									.container.mt-4
										.banner.banner-gray
											.content
												.text
													h6 
														small 
															b This is what you have:
													ul
														li 
															b 1 
															| — Arrows test credit(s)
														li 
															b 1 
															| — 3D Product shots - Basic credit(s)
														li 
															b 1 
															| — 30-Day Content Calendar (and set to upload) credit(s)
														li 
															b 1 
															| — Startup Design(s)

							.content-divider

							.row
								.col-4
									h6 Creative Assistant Credits
									span Maecenas ultrices eu sapien at sollicitudin. In ac lacus sed nisi congue tristique.
								.col-7.offset-1
									
									.empty-state.empty-state-h.state-danger
										.container-empty-state
											.content
												.feat-icon
													.feat-icon-circle.feat-icon-lg
														i.fa-regular.fa-circle-exclamation
											.content
												h5.d-block
													| Currently you have no Creative Assistant credits
											
												span 
													| You can always add more credits by clicking the button below

												.actions.mt-1
													button.btn.btn-md.btn-primary.d-inline-block
														i.fa-regular.fa-plus
														| Add credits


		//- MODAL

		#updatePayment.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
			.modal-dialog.modal-dialog-centered
				.modal-content
					button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
					.modal-body
						.text-center
							.feat-icon
								.feat-icon-circle.feat-icon-lg.feat-icon-primary
									i.fa-regular.fa-credit-card
							.modal-title Update payment info
							.content-divider
							
						.text-left
							.row
								.col
									label.form-label(for="ControlInput1") Name On Card
									.input-group.mb-3
										span.input-group-text
											i.fa-regular.fa-user
										input.form-control(type="text" placeholder="Name on card" aria-label="Example" aria-describedby="addon")
							.row
								.col
									label.form-label(for="ControlInput1") Card Number
									.input-group.mb-3
										span.input-group-text
											i.fa-regular.fa-credit-card
										input.form-control(type="text" placeholder="1234 1234 1234 1234" aria-label="Example" aria-describedby="addon")
							.row
								.col
									label.form-label(for="ControlInput1") Expiration Date
									.input-group.mb-3
										span.input-group-text
											i.fa-regular.fa-calendar
										input.form-control(type="text" placeholder="MM / AA" aria-label="Example" aria-describedby="addon")
								.col
									label.form-label(for="ControlInput1") Security Code
									.input-group.mb-3
										span.input-group-text
											i.fa-regular.fa-lock
										input.form-control(type="text" placeholder="CVC" aria-label="Example" aria-describedby="addon")
					.modal-actions
						.row
							.col-6
								button.btn.btn-primary.d-block(type='button') Save
							.col-6
								button.btn.btn-secondary-gray.d-block(type='button' data-bs-dismiss='modal') Cancel