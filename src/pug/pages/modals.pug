extends ./../layouts/default-layout.pug
block content

	.contents

		.text-d-md-semibold.black Modals

		//- INPUT

		.card.mt-4

			//- INPUT SIZES
			
			.card-header Types

			.card-body

				.contents

					.row

						.col-6

							//- STANDARD 

							.text-md-medium.gray-500.mb-2.mt-3 Standard
							
							.mb-3

								//- Button trigger modal
								button.btn.btn-primary(type='button' data-bs-toggle='modal' data-bs-target='#exampleModal')
									| Launch demo modal

								//- Modal
								#exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
									.modal-dialog.modal-dialog-centered
										.modal-content
											.modal-header
												h1#exampleModalLabel.modal-title.fs-5 Modal title
												button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
											.modal-body
												| ...
											.modal-actions
												.d-grid.gap-2
													button.btn.btn-secondary-gray(type='button' data-bs-dismiss='modal') Close
													button.btn.btn-primary(type='button') Save changes
