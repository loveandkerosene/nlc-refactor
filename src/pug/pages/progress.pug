extends ./../layouts/default-layout.pug
block content

	section#alerts.p-3.mb-4

		.container

			.text-d-md-semibold.black Progress
			.row

				.col-6


					.card.mt-4

						//- INPUT SIZES
						
						.card-header
							.title Default

						.card-body
							.content

								.row

									.col

										.mb-3
											ul
												li 
													| We use the 
													b .progress 
													| as a wrapper to indicate the max value of the progress bar.
												li 
													| We use the inner 
													b .progress-bar 
													| to indicate the progress so far.
												li 
													| The 
													b .progress-bar 
													| requires an inline style, utility class, or custom CSS to set their width.
												li 
													| The 
													b .progress-bar 
													| also requires some role and aria attributes to make it accessible, including an accessible name 
													b (using aria-label, aria-labelledby, or similar) 
													| .
										
										.progress
											.progress-bar(role='progressbar' aria-label='Basic example' aria-valuenow='0' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar(role='progressbar' aria-label='Basic example' style='width: 25%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar(role='progressbar' aria-label='Basic example' style='width: 50%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar(role='progressbar' aria-label='Basic example' style='width: 75%' aria-valuenow='75' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar(role='progressbar' aria-label='Basic example' style='width: 100%' aria-valuenow='100' aria-valuemin='0' aria-valuemax='100')
				.col-6

					.card.mt-4

						//- INPUT SIZES
						
						.card-header
							.title With Label

						.card-body
							.content

								.row

									.col

										.mb-3
											| Add labels to your progress bars by placing text within the 
											b .progress-bar 
											| .
										
										.progress
											.progress-bar(role='progressbar' aria-label='Basic example' style='width: 25%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
												| 25%
										.progress.mt-3
											.progress-bar(role='progressbar' aria-label='Basic example' style='width: 33%' aria-valuenow='33' aria-valuemin='0' aria-valuemax='100')
												| 33%
										.progress.mt-3
											.progress-bar(role='progressbar' aria-label='Basic example' style='width: 50%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
												| 50%
										.progress.mt-3
											.progress-bar(role='progressbar' aria-label='Basic example' style='width: 75%' aria-valuenow='75' aria-valuemin='0' aria-valuemax='100')
												| 75%
										.progress.mt-3
											.progress-bar(role='progressbar' aria-label='Basic example' style='width: 100%' aria-valuenow='100' aria-valuemin='0' aria-valuemax='100')
												| 100%

				.col-6

					.card.mt-4

						//- INPUT SIZES
						
						.card-header
							.title Background Color

						.card-body
							.content

								.row

									.col

										.mb-3 
											| You can use any of our 
											b background color utility classes 
											| to change 
											b .progress-bar 
											| class background color
										
										.progress
											.progress-bar.success-500-bg(role='progressbar' aria-label='Success example' style='width: 25%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar.blue-light-400-bg(role='progressbar' aria-label='Info example' style='width: 50%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar.warning-300-bg(role='progressbar' aria-label='Warning example' style='width: 75%' aria-valuenow='75' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar.danger-500-bg(role='progressbar' aria-label='Danger example' style='width: 100%' aria-valuenow='100' aria-valuemin='0' aria-valuemax='100')

				.col-6

					.card.mt-4

						//- INPUT SIZES
						
						.card-header
							.title Striped

						.card-body
							.content

								.row

									.col

										.mb-3 
											| You can add stripes by adding 
											b .progress-bar-striped 
											| to 
											b .progress-bar 
											| div
										
										.progress
											.progress-bar.progress-bar-striped.success-500-bg(role='progressbar' aria-label='Success example' style='width: 25%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar.progress-bar-striped.blue-light-400-bg(role='progressbar' aria-label='Info example' style='width: 50%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar.progress-bar-striped.warning-300-bg(role='progressbar' aria-label='Warning example' style='width: 75%' aria-valuenow='75' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar.progress-bar-striped.danger-500-bg(role='progressbar' aria-label='Danger example' style='width: 100%' aria-valuenow='100' aria-valuemin='0' aria-valuemax='100')

				.col-6

					.card.mt-4

						//- INPUT SIZES
						
						.card-header
							.title Animated Stripes

						.card-body
							.content

								.row

									.col

										.mb-3 
											| The striped color can also be animated. Add 
											b .progress-bar-animated 
											| to 
											b .progress-bar 
											| to animate the stripes right to left via CSS3 animations.
										
										.progress
											.progress-bar.progress-bar-striped.progress-bar-animated.success-500-bg(role='progressbar' aria-label='Success example' style='width: 25%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar.progress-bar-striped.progress-bar-animated.blue-light-400-bg(role='progressbar' aria-label='Info example' style='width: 50%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar.progress-bar-striped.progress-bar-animated.warning-300-bg(role='progressbar' aria-label='Warning example' style='width: 75%' aria-valuenow='75' aria-valuemin='0' aria-valuemax='100')
										.progress.mt-3
											.progress-bar.progress-bar-striped.progress-bar-animated.danger-500-bg(role='progressbar' aria-label='Danger example' style='width: 100%' aria-valuenow='100' aria-valuemin='0' aria-valuemax='100')

				.col-6

					.card.mt-4

						//- INPUT SIZES
						
						.card-header
							.title Multiple Bars

						.card-body
							.content

								.row

									.col

										.mb-3 
											| Include multiple progress bars in a progress component if you need.
										
										.progress
											.progress-bar(role='progressbar' aria-label='Segment one' style='width: 15%' aria-valuenow='15' aria-valuemin='0' aria-valuemax='100')
											.progress-bar.success-500-bg(role='progressbar' aria-label='Segment two' style='width: 30%' aria-valuenow='30' aria-valuemin='0' aria-valuemax='100')
											.progress-bar.warning-300-bg(role='progressbar' aria-label='Segment three' style='width: 20%' aria-valuenow='20' aria-valuemin='0' aria-valuemax='100')

				.col-6

					.card.mt-4

						//- INPUT SIZES
						
						.card-header
							.title Height
						.card-body
							.content

								.row

									.col

										.mb-3 
											| We only set a height value on the 
											b .progress 
											| class, so if you change that value the inner 
											b .progress-bar 
											| will automatically resize accordingly.
										
										.progress(style='height: 3px;')
											.progress-bar(role='progressbar' aria-label='Example 1px high' style='width: 25%;' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
										
										.progress.mt-3(style='height: 20px;')
											.progress-bar(role='progressbar' aria-label='Example 20px high' style='width: 25%;' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
